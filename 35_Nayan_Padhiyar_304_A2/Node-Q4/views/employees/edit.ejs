<% layout('layout', { title: 'Edit Employee' }) %>
<div class="card" style="max-width:820px;">
  <h2>Edit Employee <%= employee.empId %></h2>
  <form method="POST" action="/employees/<%= employee._id %>?_method=PUT">
    <div class="row">
      <div>
        <label>Name</label>
        <input name="name" value="<%= employee.name %>" required />
      </div>
      <div>
        <label>Email</label>
        <input name="email" type="email" value="<%= employee.email %>" required />
      </div>
      <div>
        <label>Department</label>
        <input name="department" value="<%= employee.department || '' %>" />
      </div>
      <div>
        <label>Role</label>
        <input name="role" value="<%= employee.role %>" />
      </div>
      <div>
        <label>Basic</label>
        <input name="basic" type="number" step="0.01" value="<%= employee.basic %>" />
      </div>
      <div>
        <label>HRA</label>
        <input name="hra" type="number" step="0.01" value="<%= employee.hra %>" />
      </div>
      <div>
        <label>DA</label>
        <input name="da" type="number" step="0.01" value="<%= employee.da %>" />
      </div>
      <div>
        <label>Allowance</label>
        <input name="allowance" type="number" step="0.01" value="<%= employee.allowance %>" />
      </div>
      <div>
        <label>Deductions</label>
        <input name="deductions" type="number" step="0.01" value="<%= employee.deductions %>" />
      </div>
    </div>
    <button class="btn" type="submit">Update</button>
  </form>
</div>
