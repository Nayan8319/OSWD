<% layout('layout', { title: 'Add Employee' }) %>
<div class="card" style="max-width:820px;">
  <h2>Add Employee</h2>
  <form method="POST" action="/employees">
    <div class="row">
      <div>
        <label>Name</label>
        <input name="name" required />
      </div>
      <div>
        <label>Email</label>
        <input name="email" type="email" required />
      </div>
      <div>
        <label>Department</label>
        <input name="department" />
      </div>
      <div>
        <label>Role</label>
        <input name="role" value="Employee" />
      </div>
      <div>
        <label>Basic</label>
        <input name="basic" type="number" step="0.01" value="0" />
      </div>
      <div>
        <label>HRA</label>
        <input name="hra" type="number" step="0.01" value="0" />
      </div>
      <div>
        <label>DA</label>
        <input name="da" type="number" step="0.01" value="0" />
      </div>
      <div>
        <label>Allowance</label>
        <input name="allowance" type="number" step="0.01" value="0" />
      </div>
      <div>
        <label>Deductions</label>
        <input name="deductions" type="number" step="0.01" value="0" />
      </div>
    </div>
    <p style="margin-top:10px;">A temporary password will be auto-generated, stored securely (hashed) and emailed to the employee.</p>
    <button class="btn" type="submit">Save</button>
  </form>
</div>
